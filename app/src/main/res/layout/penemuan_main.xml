<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Search Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/abdulgami"
                    android:background="@drawable/edit_text_border"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Cari barang.."/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/filter_icon" />
            </LinearLayout>

            <!-- Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Pencarian"
                    android:textSize="17dp"
                    android:textColor="#6A7173"
                    android:padding="8dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Penemuan"
                    android:textSize="17dp"
                    android:textColor="#005B92"
                    android:padding="8dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Item Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

            <!-- User Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/abdulgami"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="Kiming"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="90dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:text="2510512073"
                        android:textSize="12sp"
                        android:layout_height="20dp"
                        android:layout_width="90dp"/>
                </LinearLayout>
            </LinearLayout>


                <!-- Status -->
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/barang_contoh"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kacamata Pink"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_background"
                    android:layout_marginTop="10dp"
                    android:padding="8dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Dalam Pencarian"
                    android:textColor="#FFFFFF"/>

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Detail Barang"
                        android:textAllCaps="false"
                        android:backgroundTint="#2F90BD"
                        android:textColor="#FFFFFF"
                        android:layout_height="40dp" />

                    <Button
                        android:id="@+id/button_klaim"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Klaim Barang"
                        android:textAllCaps="false"
                        android:backgroundTint="#E18B00"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="8dp"
                        android:layout_height="40dp" />
                </LinearLayout>
            </LinearLayout>

        <!--ini card 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <!-- User Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/abdulgami"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:text="Kiming"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_width="90dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:text="2510512073"
                            android:textSize="12sp"
                            android:layout_height="20dp"
                            android:layout_width="90dp"/>
                    </LinearLayout>
                </LinearLayout>


                <!-- Status -->
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/barang_contoh"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kacamata Pink"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_background"
                    android:layout_marginTop="10dp"
                    android:padding="8dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Dalam Pencarian"
                    android:textColor="#FFFFFF"/>

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="12dp">

                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Detail Barang"
                        android:textAllCaps="false"
                        android:backgroundTint="#2F90BD"
                        android:textColor="#FFFFFF"
                        android:layout_height="40dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Klaim Barang"
                        android:textAllCaps="false"
                        android:backgroundTint="#E18B00"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="8dp"
                        android:layout_height="40dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="40dp"
        android:backgroundTint="#6168FD"
        android:src="@drawable/baseline_add_24"
        app:fabSize="normal"
        android:contentDescription="Tambah"/>
</FrameLayout>