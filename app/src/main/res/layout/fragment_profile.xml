<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FBFC"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvAkun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akun"
            android:textSize="20sp"
            android:textColor="#005B92"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Foto Profil Bulat -->
        <FrameLayout
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/abdul"
                android:background="@drawable/circle_mask"
                android:clipToOutline="true" />

            <ImageView
                android:id="@+id/ivEditProfile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:src="@drawable/ic_edit" />
        </FrameLayout>

        <!-- Nama & NIM -->
        <TextView
            android:id="@+id/tvNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abdul Hakim Darassalam"
            android:textSize="18sp"
            android:textColor="#005B92"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvNim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2210512047"
            android:textSize="14sp"
            android:textColor="#2F90BD"
            android:layout_marginBottom="16dp" />

        <!-- Password (TextView dengan toggle) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_textview"
            android:paddingHorizontal="12dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="●●●●●●●●"
                android:textSize="16sp"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/ivTogglePassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_eye" />
        </LinearLayout>

        <!-- Tombol-tombol -->
        <Button
            android:id="@+id/btnPostinganSaya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Postingan Saya"
            android:backgroundTint="#005B92"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnKontak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontak"
            android:drawablePadding="8dp"
            android:backgroundTint="#005B92"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnLacakFormulir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lacak Formulir"
            android:backgroundTint="#005B92"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:backgroundTint="#D22B2B"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
